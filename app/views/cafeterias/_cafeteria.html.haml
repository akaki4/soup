.column.is-4
  .card
    .card-image
      %figure.image.is-4by3
        =link_to cafeteria_path(cafeteria.id), class: "content-image__box" do
          %tr
          - if cafeteria.image?
            %td= image_tag cafeteria.image.to_s
          - else
            %td= image_tag "images/default.png"
    .card-content
      .cafeteria-name
        = link_to cafeteria.name, cafeteria_path(cafeteria.id), class: "content__right__top--title"
      .media-box
        .media-left
          %figure.image.is-48x48
            = link_to user_path(cafeteria.user) do
              = attachment_image_tag cafeteria.user, :profile_image, fallback: "images/no-image.png", class: "profile_image"
        .media--userName
          = link_to cafeteria.user.username, user_path(cafeteria.user), class: "content__right__bottom--userName--btn"
      .detail
        .detail--addres
          = cafeteria.addres
        .detail--date
          = cafeteria.created_at.strftime("%Y年%m月%d日 %H時%M分")
        コメント:
        = cafeteria.comments.count
        件,
        いいね:
        = cafeteria.liked_users.count
        件